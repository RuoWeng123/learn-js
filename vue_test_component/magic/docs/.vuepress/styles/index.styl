table
  display: table
  margin: 1rem 0

tr
  border-top: none

  &:nth-child(2n)
    background-color: inherit

th, td
  border: none
  padding: 0

tr
  border-top 1px solid #dfe2e5

th, td
  padding .6em 1em

.navbar
  z-index: 10

  .logo
    height: 2.8rem
    width: 2.8rem
    vertical-align: middle
    margin-right: 0.6rem

::-webkit-scrollbar
  width: 5px
  height: 5px

::-webkit-scrollbar
  background-color: #f5f5f5

::-webkit-scrollbar-thumb
  background-color: rgba(0, 0, 0, 0.2)

::-webkit-scrollbar-thumb:hover
  background-color: rgba(0, 0, 0, 0.5)

::-webkit-scrollbar-track
  -webkit-box-shadow: inset 0 0 1px rgba(0, 0, 0, 0)
  border-radius: 10px
  background-color: transparent

.el-table__header
  margin: 0

.el-table__body
  margin: 0
  display: table

.el-card__header
  padding: 8px 20px

.el-table
  th, td
    padding: 6px 0

.example-page
  .theme-default-content
    max-width: 1500px

  .custom-block
    margin-left: 15px
    margin-right: 15px

.home .hero img
  max-width: 340px
  max-height: 340px

.large-page
  .theme-default-content
    max-width: 1500px

.medium-page
  .theme-default-content
    max-width: 1200px

.engine-page
  th, td
    border: 1px solid #dfe2e5
    padding: 0.6em 1em
